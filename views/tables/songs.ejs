<% layout('/partials/table') %>

<section class="hero is-dark mb-5">
  <div class="hero-body">
    <p class="title" style="color: whitesmoke;">
      Songs
    </p>
    <p class="subtitle mt-1" style="color: whitesmoke;">
      View, insert, update, or delete Songs. Songs are written by Artists, and
      featured on Albums.
    </p>
  </div>
</section>

<div class="container mb-5" id="form-container">
  <div class="box">
    <form id="addForm" method="POST" action="/song">
      <h5 class="title is-5">INSERT new song</h5>

      <div class="field">
        <label class="label">* Song Name</label>
        <div class="control">
          <input class="input" type="text" name="songName" required />
        </div>
      </div>

      <div class="field">
        <label class="label">Song Length</label>
        <div class="control">
          <input
            class="input"
            type="number"
            name="songLength"
            placeholder="in seconds"
          />
        </div>
      </div>

      <div class="field is-small">
        <label for="albumSelect" class="label">Album ID</label>
        <div class="control select">
          <select name="albumSelect" id="albumsDropdown">
            <option value="null">--Optional--</option>
            <% data.albums.forEach(album=> { %>
            <option value="<%= album.albumID %>">
              [<%= album.albumID %>] <%= album.albumName %>
            </option>
            <% }) %>
          </select>
        </div>
      </div>

      <div class="field is-grouped">
        <div class="control">
          <button class="button is-small is-link">
            <strong>Submit</strong>
          </button>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="container">
  <div class="box">
    <table class="table is-fullwidth">
      <thead>
        <tr>
          <th>Song ID</th>
          <th>Song name</th>
          <th>Song length (s)</th>
          <th>Album ID</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(row=> { %>
        <tr id="<%=row.songID%>">
          <td>
            <%=row.songID%>
          </td>
          <td>
            <%=row.songName%>
          </td>
          <td>
            <%=row.songLength%>
          </td>
          <td>
            <%=row.albumID%>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
