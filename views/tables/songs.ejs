<% layout('/partials/table') %>

<section class="hero is-dark mb-5">
  <div class="hero-body">
    <p class="title" style="color: whitesmoke;">
      Songs
    </p>
    <p class="subtitle" style="color: whitesmoke;">
      View, insert, update, or delete Songs. Songs are written by Artists, and
      featured on Albums.
    </p>
  </div>
</section>

<div class="container mb-5" id="form-container">
  <div class="box">
    <h5 class="title is-5">INSERT new song</h5>

    <div class="field">
      <label class="label">* Song Name</label>
      <div class="control">
        <input class="input" type="text" placeholder="" />
      </div>
    </div>

    <div class="field">
      <label class="label">Song Length</label>
      <div class="control">
        <input class="input" type="number" placeholder="in seconds" />
      </div>
    </div>

    <div class="field">
      <label class="label">Album ID</label>
      <div class="control">
        <input class="input" type="text" placeholder="" />
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <button class="button is-link">Submit</button>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="box">
    <table class="table is-fullwidth">
      <thead>
        <tr>
          <th>Song ID</th>
          <th>Song name</th>
          <th>Song length (s)</th>
          <th>Album ID</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>1</td>
          <td>Placeholder</td>
          <td>180</td>
          <td>64</td>
        </tr>
        <tr>
          <td>2</td>
          <td>Placeholder</td>
          <td>462</td>
          <td>15</td>
        </tr>
        <tr>
          <td>3</td>
          <td>Placeholder</td>
          <td>102</td>
          <td>543</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
